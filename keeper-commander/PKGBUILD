pkgname=keeper-commander
pkgver=16.10.5
pkgrel=1
pkgdesc="CLI, SDK and interactive shell for KeeperÂ® Password Manager."
arch=('any')
url="https://github.com/Keeper-Security/Commander"
license=('MIT')
depends=('python3'
         'python3-aiortc'
         'python3-asciitree'
         'python3-bcrypt'
         'python3-colorama'
         'python3-cryptography'
         'python3-iso8601'
         'python3-keeper_secrets_manager_core'
         'python3-keeper_secrets_manager_helper'
         'python3-paramiko'
         'python3-paramiko_expect'
         'python3-prompt-toolkit'
         'python3-protobuf4'
         'python3-pycryptodome'
         'python3-pykeepass'
         'python3-pyperclip'
         'python3-pytest'
         'python3-requests'
         'python3-socks'
         'python3-tabulate'
         'python3-websockets'
         'xclip'
         )
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz"
        "xclip.patch")
sha512sums=('3a29d99b7c519108c5434497a920b72968096626ef08266fce644c4e1e00b4d4f69d709e5b016478d909e6808f587297ac35b2b2ed50607b669dfb3065e0c26a'
            '473734604e93b3a202b79bd65ffaa8677571b2bbab49479fdc9ab4ac592aacf3a92e431b79819b10bf3d360798b56e9ce35a239a7aa79d177d26bc5732178595')

prepare() {
  cd "Commander-$pkgver"
  patch -p0 < "$srcdir/xclip.patch"
}

package() {
  cd "Commander-$pkgver"
  python3 setup.py install --root="$pkgdir/" --optimize=1 --install-layout=deb
  install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

