# Maintainer: Sid Karunaratne <sid@karunaratne.net>
pkgname=google-chat-bin
pkgver=5.21.18
pkgrel=3
pkgdesc="Unofficial electron-based desktop client for Google Chat, electron included"
arch=('amd64')
url="https://github.com/squalou/google-chat-linux.git"
license=('WTFPL')
depends=('xdg-desktop-portal')
source=("https://github.com/squalou/google-chat-linux/releases/download/${pkgver}-${pkgrel}/google-chat-linux_${pkgver}-${pkgrel}_amd64.deb")
sha512sums=('4fef037e4c9f537799a4688cb0516b2b64b01d4bac3db9752686b42de662ec2632e297e49f40513ae5266613b9166b165b2b9e0376309bc1a721ba279171390c')

build() {
  ar x "google-chat-linux_${pkgver}-${pkgrel}_amd64.deb"
  tar xJf data.tar.xz
}

package() {
    mv "${srcdir}/usr" "${pkgdir}/usr"
    mv "${srcdir}/opt" "${pkgdir}/opt"
}

