pkgname=keeper-commander
pkgver=16.8.3
pkgrel=1
pkgdesc="CLI, SDK and interactive shell for KeeperÂ® Password Manager."
arch=('any')
url="https://github.com/Keeper-Security/Commander"
license=('MIT')
depends=('python3'
         'python3-asciitree'
         'python3-bcrypt'
         'python3-colorama'
         'python3-cryptography'
         'python3-paramiko'
         'python3-paramiko_expect'
         'python3-prompt-toolkit'
         'python3-protobuf4'
         'python3-pycryptodome'
         'python3-pykeepass'
         'python3-pyperclip'
         'python3-pytest'
         'python3-requests'
         'python3-socks'
         'python3-tabulate'
         'xclip'
         )
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz"
        "xclip.patch")
sha512sums=('618f359e2c55a2bbb0cd6e33847ea2b0fe1b9a23256a28a4748e71e521105224081434975f656647b5f88521fdd5f84549942ae8bc86f387c84c231d6e629b4d'
            'a26d3dd3eb6d77cb6c6c323de018ac1631dfc3e293f4234481498a2047f9e5e54e5132c00324482ae40fa2aa3f6aade4330de877ad64d529db12661cbbadfc67')

prepare() {
  cd "Commander-$pkgver"
  patch -p0 < "$srcdir/xclip.patch"
}

package() {
  cd "Commander-$pkgver"
  python3 setup.py install --root="$pkgdir/" --optimize=1  --install-layout=deb
  install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

