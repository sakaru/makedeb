pkgname=keeper-commander
pkgver=16.8.1
pkgrel=2
pkgdesc="CLI, SDK and interactive shell for KeeperÂ® Password Manager."
arch=('any')
url="https://github.com/Keeper-Security/Commander"
license=('MIT')
depends=('python3'
         'python3-asciitree'
         'python3-bcrypt'
         'python3-colorama'
         'python3-cryptography'
         'python3-paramiko'
         'python3-paramiko_expect'
         'python3-prompt-toolkit'
         'python3-protobuf4'
         'python3-pycryptodome'
         'python3-pykeepass'
         'python3-pyperclip'
         'python3-pytest'
         'python3-requests'
         'python3-socks'
         'python3-tabulate'
         'xclip'
         )
source=(
  "$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz"
  "xclip.patch"
)
sha512sums=(
  'ee7e554c9f663458c8a90948f658394fdc90f0d28c475fba89e7dd897b9f336a8a7985d8a66883ffd6060e8db0a4e262726846dd369878e29e5f0f4321de352d'
  '14a00ad84892114437a5adeab79dfbc421f78e5c47f81d4cc18543159963434728dbcd149ef4079ac0bd5b9dcfc2b3069af4f1c88b5476401a21322a9b2dd443'
)

prepare() {
  cd "Commander-$pkgver"
  patch -p0 < "$srcdir/xclip.patch"
}

package() {
  cd "Commander-$pkgver"
  python3 setup.py install --root="$pkgdir/" --optimize=1  --install-layout=deb
  install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

